<Window x:Class="Retros.Program.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Retros.Program"
        mc:Ignorable="d"
        Height="600" Width="900">

    <Window.InputBindings>
        <KeyBinding Gesture="Ctrl + Z" Command=""/>
    </Window.InputBindings>

    <Canvas x:Name="MainCanvas">


        <Grid x:Name="MainGrid"
              Width="{Binding ActualWidth, ElementName=MainCanvas}"
              Height="{Binding ActualHeight, ElementName=MainCanvas}">


            <Grid x:Name="ClientGrid">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
            </Grid>
        </Grid>
    </Canvas>
</Window>
