<Page x:Class="Retros.Settings.Pages.WorkstationImageSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Retros.Settings.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Workstation Image">

    <Grid>
        <Grid x:Name="MainGrid">

            <StackPanel>

                <TextBlock x:Name="Headline"/>

                <StackPanel x:Name="MainStackpanel">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="Backdrop_Shadow_Text"/>
                        <CheckBox x:Name="Backdrop_Shadow_CheckBox"/>
                    </StackPanel>

                </StackPanel>

            </StackPanel>
        </Grid>
    </Grid>
</Page>
